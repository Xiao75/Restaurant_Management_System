@model Restaurant.Models.Address

@{
    ViewData["Title"] = "Delete Address";
}

<h2 class="text-danger">Confirm Delete</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this address? It will no longer appear in your active addresses but won’t be deleted from our system.</p>
</div>

<dl class="row">
    <dt class="col-sm-2">Label</dt>
    <dd class="col-sm-10">@Model.Label</dd>

    <dt class="col-sm-2">Full Address</dt>
    <dd class="col-sm-10">@Model.FullAddress</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AddressID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
