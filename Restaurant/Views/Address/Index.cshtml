@model IEnumerable<Restaurant.Models.Address>
@{
    ViewData["Title"] = "Your Addresses";
}

<h2>Your Saved Addresses</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Add New Address</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No addresses saved yet. Click "Add New Address" to create one.
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Label</th>
                <th>Full Address</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr>
                    <td>@address.Label</td>
                    <td>@address.FullAddress</td>
                    <td>@address.CreatedAt.ToString("dd MMM yyyy")</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@address.AddressID">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@address.AddressID" 
                           onclick="return confirm('Are you sure you want to delete this address?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
