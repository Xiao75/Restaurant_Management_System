@model Restaurant.Models.Address

@{
    ViewData["Title"] = "Add New Address";
}

<h2 class="text-center mb-4">Add New Address</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="FullAddress" class="form-label">Full Address</label>
                <textarea asp-for="FullAddress" class="form-control" rows="3"></textarea>
                <span asp-validation-for="FullAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Label" class="form-label">Label (e.g., Home, Work)</label>
                <input asp-for="Label" class="form-control" placeholder="e.g., Home or Work" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save Address</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Back to Address List</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
