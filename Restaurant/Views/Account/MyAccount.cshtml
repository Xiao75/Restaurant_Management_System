@model Restaurant.Models.Customer

@{
    ViewData["Title"] = "My Account";
}

<style>
    .account-container {
        background: #e8f5e9;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0, 128, 0, 0.1);
    }

    .account-title {
        background: linear-gradient(to right, #2ecc71, #27ae60);
        color: white;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .account-buttons .btn {
        width: 48%;
        margin: 0.5rem 1%;
    }

    .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="account-container">
                <div class="account-title">
                    <h2>My Account</h2>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                </dl>

                <div class="account-buttons text-center mt-4">
                    <a asp-action="MyOrders" asp-controller="Order" class="btn btn-primary">My Orders</a>
                    <a asp-action="Logout" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>
