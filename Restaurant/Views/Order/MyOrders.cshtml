@model IEnumerable<Restaurant.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total Items</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>@order.OrderItems.Sum(i => i.Quantity)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}