@model List<Restaurant.Models.Order>
@{
    ViewData["Title"] = "Offline Orders";
}

<style>
    body {
        padding-top: 70px;
        background-color: #f7faf6; /* very light greenish background */
        font-family: 'Open Sans', sans-serif;
        color: #2f6f4e; /* dark green text */
    }

    h1 {
        color: #2f6f4e;
        font-weight: 600;
        margin-bottom: 30px;
    }

    table {
        background-color: #e6f4ea; /* light green background */
        border: 1px solid #c1d9c7;
        border-radius: 8px;
    }

    thead.table-dark {
        background-color: #2f6f4e !important; /* override bootstrap dark */
        color: #fff;
        font-weight: 700;
        border-radius: 8px 8px 0 0;
    }

    th, td {
        vertical-align: middle !important;
        border: 1px solid #c1d9c7 !important;
        color: #2f6f4e;
    }

    ul.list-unstyled {
        margin-bottom: 0;
        padding-left: 0;
        color: #2f6f4e;
        font-weight: 600;
    }

    button.btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-weight: 600;
        padding: 4px 10px;
    }

        button.btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    /* Optional: style the container */
    .container {
        max-width: 1100px;
    }
</style>

<div class="container mt-5 pt-4">
    <h1 class="text-center">Incoming Table's Order</h1>

    @if (!Model.Any())
    {
        <p>No offline orders found.</p>
    }
    else
    {
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Invoice ID</th>
                    <th>Table</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Items</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.InvoiceId</td>
                        <td>Table @order.TableNumber</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>@order.Status</td>
                        <td>₹@order.TotalAmount.ToString("F2")</td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>@item.Item?.Name × @item.Quantity</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @if (order.Status == "Pending")
                            {
                                <form asp-action="ConfirmOrder" method="post" style="display:inline">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <button type="submit" class="btn btn-sm btn-success">Confirm</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
