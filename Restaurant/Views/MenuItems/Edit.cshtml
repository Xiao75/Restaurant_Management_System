@model Restaurant.Models.MenuItem

@{
    ViewData["Title"] = "Edit Menu Item";
}

<style>
    body {
        padding-top: 70px;
    }
    .page-header {
        background: linear-gradient(to right, #2ecc71, #27ae60);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: #2e7d32;
        font-weight: 600;
    }

    .form-card {
        background-color: #f4fff6;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 10px rgba(0, 128, 0, 0.1);
    }

    .btn-success {
        background-color: #27ae60;
        border-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #219150;
            border-color: #219150;
        }
</style>

<div class="page-header">
    <h2>Edit Menu Item</h2>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="form-card">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ItemId" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <select asp-for="Category" class="form-select" asp-items="@(new SelectList(ViewBag.Categories))">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input asp-for="Available" class="form-check-input" />
                    <label asp-for="Available" class="form-check-label"></label>
                    <span asp-validation-for="Available" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="ImageFile" class="form-label">Upload New Image (optional)</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="form-group mb-3">
                        <label class="form-label">Current Image:</label><br />
                        <img src="~/images/@Model.ImagePath" width="120" class="img-thumbnail" />
                    </div>
                }

                <div class="form-group mt-3">
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
