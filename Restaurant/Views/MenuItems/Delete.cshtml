@model Restaurant.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<h1>Delete Menu Item</h1>
<hr />

<h4>Are you sure you want to delete this item?</h4>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">@string.Format("{0:C}", Model.Price ?? 0)</dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-4">Image</dt>
                <dd class="col-sm-8">
                    <img src="~/images/@Model.ImagePath" width="120" />
                </dd>
            }
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ItemId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
