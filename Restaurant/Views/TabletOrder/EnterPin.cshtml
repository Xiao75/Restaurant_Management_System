@{
    ViewData["Title"] = "Tablet Access - Enter PIN";
}

<div style="display: flex; justify-content: center; align-items: center; height: 70vh">
    <div style="text-align: center; border: 1px solid #ccc; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); background-color: #f9f9f9;">
        <h2 class="mt-3">Enter Tablet PIN</h2>

        <form method="post" asp-action="EnterPin">
            <div> 
                <input type="password" name="pin" placeholder="Enter PIN" class="form-control" required  />
            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </form>

        @if (ViewBag.Error != null)
        {
            <p style="color: red; margin-top: 15px;">@ViewBag.Error</p>
        }
    </div>
</div>
